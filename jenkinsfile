pipeline {
         agent any
         stages {
                 stage('One') {
                 steps {
                     echo 'Hello, this is Zulaikha from edureka'
                       }
                 }
          }
}
node('master') {
    stage("Checkout") {
        bat "git commit -m 'a new file has added to the github repository' "
    }
}
properties([
    pipelineTriggers([[$class: 'PeriodicFolderTrigger', interval: '1m']])
])

def triggers = []
if (env.BRANCH_NAME == 'master') {
  triggers << [
    $class: 'hudson.triggers.TimerTrigger',
    spec: "H 14 * * *"
  ]
}
